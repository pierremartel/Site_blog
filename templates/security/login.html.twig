{% extends "base.html.twig" %}

{% block body %}

    <h1>Formulaire de Connexion</h1>

    <form method="post" action"{{ path('security_login') }}">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Adresse email" required name="_username">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Mot de passe" required name="_password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Connexion</button>
        </div>

    </form>

{% endblock %}