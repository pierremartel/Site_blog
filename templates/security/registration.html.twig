{% extends 'base.html.twig' %}

{% block body %}

    <h1>Formulaire d'inscription !</h1>

    {{ form_start(form, {'attr': {novalidate: 'novalidate'}}) }}

    {{ form_row(form.email, {'attr': {'placeholder' : 'Adresse mail.. '}}) }}
    {{ form_row(form.username, {'label' : 'Nom Utilisateur', 'attr' : {'placeholder' : 'Nom d\'utilisateur'}}) }}
    {{ form_row(form.password, {'attr' : {'placeholder' : 'Mot de passe'}}) }}
    {{ form_row(form.confirm_password, {'attr' : {'placeholder' : 'Répétez votre mot de passe'}}) }}

    <button type="submit" class="btn btn-success">Inscrivez-vous !</button>

    {{ form_end(form) }}


{% endblock %}